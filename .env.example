# VLM Provider API Keys
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
XAI_API_KEY=your-xai-api-key

# Primary VLM Provider (gemini, openai, anthropic, xai)
VLM_PRIMARY_PROVIDER=gemini
VLM_SECONDARY_PROVIDER=anthropic

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cwe
REDIS_URL=redis://localhost:6379/0

# Object Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=cwe-artifacts

# Vector Database (optional)
WEAVIATE_URL=http://localhost:8080

# Application Settings
CWE_ENV=development
CWE_DEBUG=true
CWE_LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Agent Settings
AGENT_MAX_ITERATIONS=100
AGENT_PARALLEL_BRANCHES=5
AGENT_CONFIDENCE_THRESHOLD=0.6

# Context Management
MAX_CONTEXT_TOKENS=1000000
SUMMARIZATION_STRATEGY=hierarchical
